@model IEnumerable<MyApp.ViewModel.PessoaViewModel>

@{
    ViewBag.Title = "Pessoas Help";
}


<div class="container">
    <p class="display-1">
        Olá
        @if (User.Identity.IsAuthenticated)
            {
            @User.Identity.Name
        }
        else
        {
            @Html.Raw("Guest");
            }
    </p>
    <hr />

    <div class="row">
        @Html.ActionLink("Home", "Index", null, new { @class = "col-2 btn btn-primary ms-1" })
        @if (User.IsInRole("Admin"))
            {
            @Html.ActionLink("Privado", "Private", "AdminOp", new { Area = "Admin" }, new { @class = "col-2 btn btn-primary ms-1" })
        }
        @if (User.Identity.Name == "Maria")
            {
            @Html.ActionLink("Maria", "Maria", "AdminOp", new { Area = "Admin" }, new { @class = "col-2 btn btn-primary ms-1" })
        }
    </div>
    <hr />
    @Html.ActionLink("Criar", "PessoaDetail", null, new { @class = "btn btn-primary" })

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cod)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pais)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Photo)
                </th>
                <th>
                    Qtd Animais
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var elem in Model)
            {
                ViewBag.EditControllerName = "MyApp";
                ViewBag.EditActionName = "PessoaDetail";
                ViewBag.DeleteControllerName = "MyApp";
                ViewBag.DeleteActionName = "PessoaDelete";
                Html.RenderPartial("PessoaDetailTR", elem);
            }
        </tbody>
    </table>
</div>

